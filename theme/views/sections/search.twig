<section class="blog">
  <div class="container blog__container">
    <div class="row">

      <div class="col-md-12 col-lg-9">

        <h2 class="blog__title">{{ __('Search results for: ') }} {{ search_query }}</h2>
        {% if search_query %}

          {% if results %}

            {% include('parts/posts-search.twig') %}

            <div class="pagination-nav p-t-32 p-b-120">
              {{ pagination }}
            </div>

          {% else %}

            <h3>{{ __('There are no results for the given word') }}</h3>

          {% endif %}


        {% else %}

          <h3>{{ __('Enter a search term') }}</h3>

        {% endif %}
      </div>

      <div class="col-md-12 col-lg-3">
        {% include('parts/blog-searchform.twig') %}
      </div>

    </div>
  </div>

</section>
